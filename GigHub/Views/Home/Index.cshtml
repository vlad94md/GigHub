@model GigHub.Core.ViewModels.GigsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="leftoffset35">Upcoming Gigs:</h2>

<div id="container">
    <div id="search" class="leftoffset35 voffset30">
        @using (Html.BeginForm("Search", "Gigs"))
        {
            <div class="form-group">
                <div id="searchGigs" class="input-group">
                    @Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control", @placeholder = "Search by genre, artist..." })

                    <span id="searchButton" class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </span>
                </div>
            </div>
        }
    </div>


    @Html.Partial("Gigs", @Model)
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            var container = "#container";

            GigsController.init(container);
            FollowController.init(container);
        });
    </script>
}