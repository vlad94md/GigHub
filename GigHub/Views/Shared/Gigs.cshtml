@model GigHub.ViewModels.GigsViewModel
@{
    ViewBag.Title = "Index";
}

<ul class="gigs voffset30">
    @foreach (var gig in Model.UpcomingGigs)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Artist.Name
                    @if(Model.ShowActions)
                    {
                        <button data-user-id="@gig.ArtistId" class="btn btn-link btn-sm pull-right js-toggle-follow">Follow</button>
                    }
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
                @if (Model.ShowActions)
                {
                    <button data-gig-id="@gig.Id" class="btn btn-default btn-sm pull-right js-toggle-attendance">Going?</button>
                }
            </div>
        </li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);
                $.post("/api/attendances", { gigId: button.attr("data-gig-id") })
                    .done(function () {
                        button.removeClass("btn-default").addClass("btn-info").text("I'm In!");
                    })
                    .fail(function () {
                        alert("Something wrong!");
                    });
            });

            $(".js-toggle-follow").click(function (e) {
                var link = $(e.target);
                $.post("/api/following", { followeeId: link.attr("data-user-id") })
                    .done(function () {
                        link.text("Following");
                    })
                    .fail(function () {
                        alert("Something wrong!");
                    });
            });
        });
    </script>
}