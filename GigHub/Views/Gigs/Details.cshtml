@model GigHub.Core.ViewModels.GigDetailsViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    @Model.Gig.Artist.Name

    @if (User.Identity.IsAuthenticated)
    {
        if (Model.isFollowing)
        {
            <button class="btn btn-info btn-sm pull-right js-toggle-follow">Followed</button>
        }
        else
        {
            <button class="btn btn-default btn-sm pull-right js-toggle-follow">Follow</button>
        }
    }


</h2>


<span>
    Performing at @Model.Gig.Venue at @Model.Gig.DateTime.ToString("d MMM") at @Model.Gig.DateTime.ToString("HH:mm")
</span>


@if (User.Identity.IsAuthenticated && Model.isAttending)
{
    <p>You are going to this event.</p>
}
